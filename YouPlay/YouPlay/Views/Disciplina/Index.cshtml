@model YouPlay.Models.DisciplinaViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="form_aluno" class="form-horizontal" method="post" action="Salvar">
    <fieldset>
        <div class="col-md-12 " style="margin-top: 10%">
            <div class="card mb-12">
                <div class="card-header py-3 p-3 bg-gray-400"><h2 class="text-center">Cadastro de Aulas</h2></div>

                <div class="card-body">
                    <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
                    <!-- Cadastro disciplina -->

                    @if (ViewBag.Operacao == "A")
                    {
                        <input type="hidden" name="Codigo" value="@Model.Codigo" />
                    }

                    <div class="form-group row">
                        <!-- Nome disciplina -->
                        <div class="col-md-4">
                            <label class="col-md-12 control-label" for="Nome">Nome <h11>*</h11></label>
                            <input id="Nome" value="@Model.Descricao" name="Descricao" class="form-control input-md" type="text" required>
                        </div>


                        <!-- Data e horário de aula -->
                        <div class="col-md-4">
                            <label class="col-md-12 control-label" for="Data">Data *</label>
                            <input id="Data" name="Data" value="@Model.Data" placeholder="DD/MM/AAAA" class="form-control date-picker" type="datetime" data-datepicker-color="primary" minlength="10" maxlength="10" onkeypress="formatar('##/##/####', this)" onblur="show_hide_responsavel()" required>
                        </div>

                        <!-- Total de vagas -->
                        <div class="col-md-4">
                            <label class="col-md-12 control-label" for="TotalVagas">Total de vagas<h11>*</h11></label>
                            <input id="TotalVagas" value="@Model.TotalVagas" name="TotalVagas" class="form-control" type="number" required>
                        </div>
                    </div>

                    @*<div class="form-group row">
                        <!-- Professor -->
                        <div class="col-md-8">
                            <label class="col-md-12 control-label" for="Professor">Professor *</label>
                            <input id="Professor" name="Professor" class="form-control" type="text" />
                        </div>

                        <!-- Tipo de aula -->
                        <div class="col-md-4">
                            <label class="col-md-12 control-label" for="Professor">Tipo *</label>
                            <input id="Tipo" name="Tipo" class="form-control" type="text" />
                        </div>
                    </div>*@

                    <div class="form-group row">
                        <div class="col-md-8">
                            <button id="btn_cadastrar_aluno" class="btn btn-success" type="submit">Cadastrar</button>
                            <button id="btn_cancelar" class="btn btn-danger" type="reset">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</form>

<script>
    function verImagem() {
        var oFReader = new FileReader();
        oFReader.readAsDataURL(document.getElementById("Imagem").files[0]);
        oFReader.onload = function (oFREvent) {
            document.getElementById("imgPreview").src = oFREvent.target.result;
        };
    }
</script>